{
  "baseUrl": "/devdocs",
  "titlePrefix": "MarkBind",
  "style": {
    "codeTheme": "light"
  },
  "pages": [
    {
      "glob": ["*.md", "devGuide/*.md", "devGuide/*/*.md"]
    },
    {
      "src": ["index.md", "devGuide/index.md"],
      "searchable": "no"
    }
  ],
  "headingIndexingLevel": 6,
  "ignore": [
    "_markbind",
    "_site/*",
    "lib/*",
    "*.json",
    "*.md",
    "*.njk",
    ".git/*",
    "*.pptx",
    "CNAME"
  ],
  "plugins": [
    "filterTags",
    "codeBlockCopyButtons"
  ],
  "pluginsContext": {
    "filterTags": {
      "tags": ["environment--dg"]
    }
  },
  "deploy": {
    "message": "Dev Site Update.",
    "repo": "https://github.com/MarkBind/devdocs.git",
    "branch": "gh-pages"
  }
}
