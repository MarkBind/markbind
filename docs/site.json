{
  "baseUrl": "/markbind",
  "titlePrefix": "MarkBind",
  "pages": [
    {
      "glob": "**/*.mbd"
    },
    {
      "glob": "*.md"
    },
    {
      "src": "index.md",
      "searchable": "no"
    },
    {
      "glob": "userGuide/*.md"
    }
  ],
  "headingIndexingLevel": 6,
  "ignore": [
    "_markbind",
    "_site/*",
    "lib/*",
    "*.json",
    "*.md",
    "*.mbd",
    ".git/*",
    "*.pptx"
  ],
  "deploy": {
    "message": "Site Update.",
    "repo": "https://github.com/MarkBind/markbind.git"
  }
}
