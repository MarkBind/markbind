{
  "baseUrl": "",
  "titlePrefix": "MarkBind",
  "style": {
    "codeTheme": "light"
  },
  "pages": [
    {
      "glob": ["*.md", "userGuide/*.md", "userGuide/components/*.md"]
    },
    {
      "src": [
        "index.md",
        "userGuide/index.md",
        "userGuide/syntaxReference.md",
        "userGuide/readerFacingFeatures.md"
      ],
      "searchable": "no"
    }
  ],
  "plugins" : [
    "filterTags",
    "mathDelimiters",
    "codeBlockWrapButtons",
    "web3Form",
    "codeBlockCopyButtons",
    "dataTable",
    "mermaid"
  ],
  "pluginsContext" : {
    "filterTags" : {
      "tags": ["environment--ug"]
    },
    "mathDelimiters": {
      "delimiters": ["beg_end"]
    },
    "web3Form": {
      "accessKey": [""]
    }
  },
  "headingIndexingLevel": 6,
  "ignore": [
    "_markbind",
    "_site/*",
    "lib/*",
    "*.json",
    "*.md",
    "*.njk",
    ".git/*",
    "*.pptx"
  ],
  "deploy": {
    "message": "Site Update.",
    "repo": "https://github.com/MarkBind/markbind.github.io.git",
    "branch": "master"
  }
}
