{
  "name": "root",
  "private": true,
  "scripts": {
    "build:web": "cd packages/core-web && npm run build",
    "csslint": "stylelint **/*.css **/*.vue",
    "csslintfix": "stylelint **/*.css **/*.vue --fix",
    "lint": "eslint . --ext .js,.vue && npm run csslint",
    "lintlinebreakstyle": "eslint . --ext .js,.vue -c .eslintrc.test.js",
    "lintlinebreakstylefix": "eslint . --ext .js,.vue -c .eslintrc.test.js --fix",
    "lintfix": "eslint . --ext .js,.vue --fix && npm run lintlinebreakstylefix && npm run csslintfix",
    "setup": "npm ci && lerna clean --yes && lerna bootstrap --hoist",
    "test": "npm run lint && npm run lintlinebreakstyle && lerna run test --stream",
    "updatetest": "lerna run updatetest --stream"
  },
  "devDependencies": {
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lodash": "^7.2.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "lerna": "^3.22.1"
  }
}
